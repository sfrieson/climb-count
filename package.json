{
  "name": "climb-count",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run dev",
    "test": "jest --testPathPattern=\"(basic-functionality|route-image)\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "node --experimental-vm-modules node_modules/.bin/jest --config=jest.e2e.config.js --forceExit",
    "test:e2e:debug": "HEADLESS=false node --experimental-vm-modules node_modules/.bin/jest --config=jest.e2e.config.js --verbose --runInBand",
    "test:all": "npm run test && npm run test:e2e",
    "test:pre-push": "npm run test && npm run test:e2e",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run format:check && npm run test",
    "validate:full": "npm run lint && npm run format:check && npm run test:all",
    "prepare": "husky install"
  },
  "keywords": [
    "climbing",
    "pwa",
    "tracker"
  ],
  "author": "",
  "license": "ISC",
  "description": "A Progressive Web App for tracking climbing attempts and sessions",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.0.0",
    "puppeteer": "^24.16.2",
    "vite": "^7.1.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,md,json}": [
      "prettier --write"
    ]
  }
}
